<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="223dp"
    android:layout_marginHorizontal="15dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginBottom="15dp"
    app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_head_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            app:layout_constraintLeft_toRightOf="@id/iv_head_photo"
            app:layout_constraintTop_toTopOf="@id/iv_head_photo"
            android:layout_marginStart="5dp"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="柳惊涛"/>
        <TextView
          app:layout_constraintTop_toBottomOf="@+id/tv_name"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toRightOf="@id/iv_head_photo"
            android:drawableStart="@mipmap/icon_yellow_authentication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:textColor="@color/text_main_gray"
            android:paddingVertical="3dp"
            android:paddingHorizontal="11dp"
            android:background="@drawable/bg_gray_f2f4f5_11r"
            android:textSize="12sp"
            android:text="@string/real_name_author"/>
        <TextView
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_head_photo"
            android:id="@+id/tv_yield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/currency_up_color"
            android:text="326.25%"/>
        <TextView
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/iv_head_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_profit_rate"
            android:textColor="@color/text_main_gray"
            android:textSize="13sp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/iv_head_photo"
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="20dp"/>
       <TextView
           android:id="@+id/tv_winning_rate_recent_3"
           app:layout_constraintTop_toBottomOf="@id/recyclerView"
           app:layout_constraintLeft_toLeftOf="parent"
           android:layout_marginTop="15dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="12sp"
           android:textColor="@color/text_main_gray"
           android:text="@string/last_3_week_win_rate"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_win_rate"
            app:layout_constraintLeft_toRightOf="@id/tv_winning_rate_recent_3"
            app:layout_constraintTop_toTopOf="@id/tv_winning_rate_recent_3"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="87.03%"
            android:textSize="12sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_withdrawal_rate_recent_3"
            android:layout_marginTop="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_winning_rate_recent_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_main_gray"
            android:text="@string/last_3_week_withdrawal_rate"/>

        <TextView
            android:id="@+id/tv_withdrawal_rate"
            app:layout_constraintLeft_toRightOf="@id/tv_withdrawal_rate_recent_3"
            app:layout_constraintTop_toTopOf="@id/tv_withdrawal_rate_recent_3"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.47%"
            android:textSize="12sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_trade_num_recent_3"
            android:layout_marginTop="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_withdrawal_rate_recent_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_main_gray"
            android:text="@string/last_3_week_trade_num"/>

        <TextView
            android:id="@+id/tv_trade_num"
            app:layout_constraintLeft_toRightOf="@id/tv_trade_num_recent_3"
            app:layout_constraintTop_toTopOf="@id/tv_trade_num_recent_3"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="62"
            android:textSize="12sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/trade_days"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="80dp"
            app:layout_constraintTop_toTopOf="@id/tv_winning_rate_recent_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_main_gray"
            android:text="@string/trade_days"/>
        <TextView
            android:id="@+id/tv_trade_days"
            app:layout_constraintTop_toTopOf="@id/tv_winning_rate_recent_3"
            app:layout_constraintLeft_toRightOf="@id/trade_days"
            android:layout_marginStart="37dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="132"
            android:textSize="12sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/follow_num"
            app:layout_constraintLeft_toLeftOf="@id/trade_days"
            app:layout_constraintTop_toTopOf="@id/tv_withdrawal_rate_recent_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_main_gray"
            android:text="@string/total_follow_num"/>
        <TextView
            app:layout_constraintTop_toTopOf="@id/tv_withdrawal_rate_recent_3"
            app:layout_constraintLeft_toRightOf="@id/trade_days"
           app:layout_constraintLeft_toLeftOf="@id/tv_trade_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000+"
            android:textSize="12sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/dialog_circle_blue_bg_dp5"
            android:textSize="13sp"
            android:layout_width="match_parent"
            android:paddingVertical="7dp"
            android:gravity="center"
            android:textColor="@color/blue_button_color"
           android:text="@string/follow_order"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
