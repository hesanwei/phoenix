<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_coin_type"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BTC/USD"/>
    <TextView
        android:id="@+id/tv_times"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_coin_type"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10X"/>
    <TextView
        android:id="@+id/tv_make_type"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_times"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/currency_up_color"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="做多"/>
    <TextView
        android:id="@+id/tv_profit_rate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/currency_up_color"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+11.64%"/>
    <TextView
        android:id="@+id/open_price"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_coin_type"
        app:layout_constraintLeft_toLeftOf="@id/tv_coin_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开仓价"
        android:textColor="@color/text_main_black"
        android:textSize="11sp"/>
    <TextView
        android:drawablePadding="12dp"
        android:id="@+id/tv_open_price"
        app:layout_constraintTop_toTopOf="@id/open_price"
        app:layout_constraintLeft_toRightOf="@id/open_price"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9258.67"
        android:drawableEnd="@mipmap/icon_arrow_right_small"
        android:textColor="@color/text_main_black"
        android:textSize="11sp"/>

    <TextView
        android:id="@+id/balance_price"
        app:layout_constraintTop_toTopOf="@id/tv_open_price"
        app:layout_constraintLeft_toRightOf="@id/tv_open_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="平仓价"
        android:textColor="@color/text_main_black"
        android:textSize="11sp"/>
    <TextView
        android:id="@+id/tv_balance_price"
        app:layout_constraintTop_toTopOf="@id/balance_price"
        app:layout_constraintLeft_toRightOf="@id/balance_price"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9366.52"
        android:textColor="@color/text_main_black"
        android:textSize="11sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收益率"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/open_price"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/order_num"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/open_price"
        app:layout_constraintLeft_toLeftOf="@id/open_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号"
        android:textColor="@color/text_main_gray"
        android:textSize="11sp"/>
    <TextView
        android:id="@+id/order_type"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/order_num"
        app:layout_constraintLeft_toLeftOf="@id/open_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单类型"
        android:textColor="@color/text_main_gray"
        android:textSize="11sp"/>
    <TextView
        android:id="@+id/tv_order_num"
        android:layout_marginStart="26dp"
        app:layout_constraintTop_toTopOf="@id/order_num"
        app:layout_constraintLeft_toRightOf="@id/order_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="47539976"
        android:textColor="@color/text_main_gray"
        android:textSize="11sp"/>
    <TextView
        android:id="@+id/tv_order_type"
        app:layout_constraintTop_toTopOf="@id/order_type"
        app:layout_constraintLeft_toLeftOf="@id/tv_order_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自主下单"
        android:textColor="@color/text_main_gray"
        android:textSize="11sp"/>
    <TextView
        android:id="@+id/tv_open_time"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/order_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/text_main_gray"
        android:text="2020.06.10 00:27:16"/>
    <TextView
        android:id="@+id/tv_balance_time"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/order_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/text_main_gray"
        android:text="2020.06.10 00:27:16"/>
    <TextView
        android:id="@+id/open_time"
        android:layout_marginEnd="15dp"
        app:layout_constraintRight_toLeftOf="@+id/tv_open_time"
        app:layout_constraintTop_toTopOf="@+id/tv_open_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/text_main_gray"
        android:text="开仓时间"/>
    <TextView
        android:id="@+id/balance_time"
        android:layout_marginEnd="15dp"
        app:layout_constraintRight_toLeftOf="@+id/tv_balance_time"
        app:layout_constraintTop_toTopOf="@+id/tv_balance_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/text_main_gray"
        android:text="开仓时间"/>
    <View
        app:layout_constraintTop_toBottomOf="@id/order_type"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_gray_F4F6F9"/>

</androidx.constraintlayout.widget.ConstraintLayout>