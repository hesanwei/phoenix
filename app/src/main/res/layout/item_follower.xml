<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_head_photo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="15dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/iv_head_photo"
        app:layout_constraintLeft_toRightOf="@id/iv_head_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="柳惊涛"
        android:textColor="@color/black"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跟随总额：6171.99"
        android:textSize="13sp"
        android:textColor="@color/text_main_gray"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"/>
    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+274.40"
        android:textColor="@color/currency_up_color"
        app:layout_constraintTop_toTopOf="@id/iv_head_photo"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="10dp"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/tv_money"
        app:layout_constraintRight_toRightOf="@id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跟随者收益(USDT)"
        android:textColor="@color/text_main_gray"
        android:textSize="13sp"/>
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="0.8dp"
        android:layout_marginStart="15dp"
        android:background="@color/color_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>