<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/deal_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="6dp"
        android:paddingStart="16dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="22:49:53"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/deal_direction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:textColor="@color/currency_up_color"
        android:textSize="12sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/deal_time"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="做多"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/deal_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/deal_direction"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="9462.69"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/deal_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingEnd="16dp"
        android:gravity="end"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/deal_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="1.076525"/>

</androidx.constraintlayout.widget.ConstraintLayout>